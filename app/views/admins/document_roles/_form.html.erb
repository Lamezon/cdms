<%= simple_form_for([:admins, @document_role]) do |f| %>
  <div class="row">
    <%= f.input :name, wrapper_html: { class: 'col-sm-12' } %>
    <%= f.input :description, wrapper_html: { class: 'col-sm-12' } %>
  </div>

  <div class="form-footer">
    <div class="d-flex">
      <%= link_to t('views.links.back'), admins_document_roles_path, class: 'btn btn-secondary' %>
      <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
    </div>
  </div>

<% end %>
